<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	mc:Ignorable="d"
	x:Class="WPFPageSwitch.Gameplay"
	d:DesignWidth="640" d:DesignHeight="480" Width="800" Height="600">

	<Grid x:Name="gameplayLayoutRoot" Background="White">
		<TextBlock Name="NameGroup" Height="30" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="760" TextWrapping="Wrap" FontSize="21.333" TextAlignment="Center"/>
		<Button HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Width="100" Content="&lt; Назад" Height="25" Click="Button_Click"/>
		<Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="495" Margin="10,55,0,0" VerticalAlignment="Top" Width="780">
			<ScrollViewer x:Name="scrollViewer" Margin="3">
				<StackPanel x:Name="myStackPanel" HorizontalAlignment="Center" VerticalAlignment="Top" />
			</ScrollViewer>
		</Border>
	</Grid>
</UserControl>